@model ocurrenceio_aspnet.Models.Report

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class="col-sm-2">
            Criado por
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User
        </dd>
        <dt class="col-sm-2">
            Estados
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ListReportState.Any()) {
                <ul>
                    @foreach (var state in Model.ListReportState) {
                        <li>@state.State</li>
                    }
                </ul>
            }
        </dd>
        @if (Model.ListReportImage.Any()) {
            <div>
                <dt class = "col-sm-2">Images</dt>
                <div class="row">
                    @foreach (var image in Model.ListReportImage)
                    {
                        <div class="col-md-3">
                            <img src="~/@Url.Content(image.Name.Replace('\\', '/'))" alt="Report Image" class="img-thumbnail" width="200px"/>
                        </div>
                    }
                </div>
            </div>
}
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@model ocurrenceio_aspnet.Models.Report

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Ocorrência</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Criado por
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class="col-sm-2">
            Estados
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ListReportState.Any()) {
                <ul>
                    @foreach (var state in Model.ListReportState) {
                        <li>@state.State</li>
                    }
                </ul>
            }
        </dd>
    </dl>
</div>


@if (Model.ListReportImage.Any())
{
    <div>
        <dt class = "col-sm-2">Images</dt>
        <br />
        <div class="row">
            @foreach (var image in Model.ListReportImage)
            {
                <div class="col-md-3">
                    <img src="~/@Url.Content(image.Name.Replace('\\', '/'))" alt="Report Image" class="img-thumbnail" width="400px"/>
                </div>
            }
        </div>
    </div>
}
<br />
<div>
    <a class="btn btn-warning" role="button" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary" role="button" asp-action="Index">Voltar à Lista</a>
</div>

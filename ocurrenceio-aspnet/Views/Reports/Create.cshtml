@model ocurrenceio_aspnet.Models.Report

@{
    ViewData["Title"] = "Create";
}

<h1>Criar uma nova Ocorrência</h1>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Title *@
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <br />
            @* Description *@
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <br />
            @* Latitude *@
            <div class="form-group row">
                <label asp-for="Latitude" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Latitude" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
            </div>
            <br />
            @* Longitude *@
            <div class="form-group row">
                <label asp-for="Longitude" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
            <br />
            @* Images *@
            <div class="form-group row">
                <label class="col-sm-2 control-label" for="images" >Imagens</label>
                <div class="col-sm-10">
                    <input class="form-control-file" type="file" accept=".jpg,.jpeg,.png" name="images" multiple accept="image/*"  />
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" /> 
                <a class="btn btn-danger" role="button" asp-action="Index">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>


<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
